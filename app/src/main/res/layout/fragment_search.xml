<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomnavfragments.SearchFragment"
    style="@style/ScreenBackground">
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Lezzet Robotu"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_anchorGravity="top|start"
        style="@style/TextColor"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recipeLayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                >

                <TextView
                    android:id="@+id/recipeName"
                    style="@style/TextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp"
                    android:textStyle="bold|italic"
                    android:fontFamily="@font/roboto_mono"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/recipeName">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ImageColor"
                        android:src="@drawable/baseline_access_time_24"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/prepTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="20dp"
                        style="@style/TextColor"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ImageColor"
                        android:src="@drawable/baseline_access_time_24"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/cookTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        style="@style/TextColor"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ImageColor"
                        android:src="@drawable/person_fill"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/servingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        style="@style/TextColor"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/ingredientsTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="İçindekiler:"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_mono"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    style="@style/TextColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout"
                    />


                <TextView
                    android:id="@+id/detailsIngredientsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textStyle="italic"
                    android:fontFamily="@font/roboto_mono"
                    style="@style/TextColor"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ingredientsTitleText"/>

                <TextView
                    android:id="@+id/recipeTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yapılışı:"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_mono"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    style="@style/TextColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailsIngredientsText"
                    />


                <TextView
                    android:id="@+id/recipeDetailsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="recipe"
                    android:textStyle="italic"
                    android:fontFamily="@font/roboto_mono"
                    style="@style/TextColor"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipeTitleText"/>




            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/infoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/magic"
        android:scaleType="center"
        app:layout_anchor="@id/scrollView"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="5dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>


